#!/bin/bash
set -e

export WORKING_DIR=/opt/code-agent/

echo "=== Move to app dir ==="
cd ${WORKING_DIR}

echo "=== Reading $(pwd)/.env file ==="
export $(cat .env | grep -v ^# | xargs)

echo "=== Reading $(pwd)/.version file ==="
export $(cat .version | grep -v ^# | xargs)

echo "=== Starting Code Agent service ==="
echo "Detected version: '${DOCKER_IMAGE}'"
docker compose up
